# Teamcenter Automation Credentials Template
# Copy this file to credentials.env and fill in your actual values
# NEVER commit credentials.env to version control!

# Teamcenter Credentials
TEAMCENTER_URL=https://teamcenter.epiroc.com/tc
TEAMCENTER_USER=your.name@epiroc.com
TEAMCENTER_PASS=your_password_here
TEAMCENTER_GROUP=Engineering
TEAMCENTER_ROLE=Designer

# API Keys (if using token-based auth)
TEAMCENTER_API_KEY=your_api_key_here
TEAMCENTER_API_SECRET=your_api_secret_here

# SSO Configuration (if using SSO)
SSO_CLIENT_ID=your_sso_client_id
SSO_CLIENT_SECRET=your_sso_client_secret
SSO_TENANT_ID=your_tenant_id

# Database Credentials (if using external DB)
DB_USERNAME=automation_user
DB_PASSWORD=secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teamcenter_automation

# Redis Cache (if enabled)
REDIS_PASSWORD=redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Configuration
SMTP_USER=automation@epiroc.com
SMTP_PASS=email_password_here
SMTP_SERVER=smtp.epiroc.com
SMTP_PORT=587

# Encryption Key (for credential storage)
ENCRYPTION_KEY=generate_a_secure_key_here

# Logging API (if using remote logging)
LOGGING_API_KEY=logging_api_key_here

# Notification Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# ERP Integration (if enabled)
SAP_USER=sap_integration_user
SAP_PASS=sap_password_here
SAP_ENDPOINT=https://sap.epiroc.com/api

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Settings (only for development)
DEBUG_MODE=false
MOCK_API=false

# Feature Flags
ENABLE_ML_FEATURES=false
ENABLE_AUTO_APPROVAL=false

# Certificate Paths (if using certificate auth)
CLIENT_CERT_PATH=/path/to/client.crt
CLIENT_KEY_PATH=/path/to/client.key
CA_BUNDLE_PATH=/path/to/ca-bundle.crt